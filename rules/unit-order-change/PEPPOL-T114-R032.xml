<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="peppolbis-t114-base-3.0">
	<assert>
		<description>Verify that allowance amounts are not negative</description>
		<scope>PEPPOL-T114-R032</scope>
	</assert>
	<test>
		<assert>
			<success>PEPPOL-T114-R032</success>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:Amount>100</cbc:Amount>
			</cac:AllowanceCharge>

			<cac:OrderLine>
				<cac:LineItem>
					<cac:AllowanceCharge>
						<cbc:Amount>10</cbc:Amount>
					</cac:AllowanceCharge>
				</cac:LineItem>
			</cac:OrderLine>
		</Order>
	</test>
	<test>
		<assert>
			<success>PEPPOL-T114-R032</success>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:Amount>0</cbc:Amount>
			</cac:AllowanceCharge>

			<cac:OrderLine>
				<cac:LineItem>
					<cac:AllowanceCharge>
						<cbc:Amount>0.00</cbc:Amount>
					</cac:AllowanceCharge>
				</cac:LineItem>
			</cac:OrderLine>
		</Order>
	</test>

	<test>
		<assert>
			<error number="2">PEPPOL-T114-R032</error>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:Amount>-100</cbc:Amount>
			</cac:AllowanceCharge>

			<cac:OrderLine>
				<cac:LineItem>
					<cac:AllowanceCharge>
						<cbc:Amount>-10</cbc:Amount>
					</cac:AllowanceCharge>
				</cac:LineItem>
			</cac:OrderLine>
		</Order>
	</test>

</testSet>
