<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
	configuration="peppolbis-t114-base-3.0">
	<assert>
		<description>Verify that allowance/charge amount equal base amount * percentage/100, if base
			amount and percentage exists.</description>
		<scope>PEPPOL-T114-R022</scope>
	</assert>
	<test>
		<assert>
			<success>PEPPOL-T114-R022</success>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
			</cac:AllowanceCharge>

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
			</cac:AllowanceCharge>

		</OrderChange>
	</test>
	<test>
		<assert>
			<success>PEPPOL-T114-R022</success>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:OrderLine>
				<cac:LineItem>
					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
						<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
						<cbc:Amount currencyID="NOK">100</cbc:Amount>
						<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
					</cac:AllowanceCharge>

					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
						<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
						<cbc:Amount currencyID="NOK">100</cbc:Amount>
						<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
					</cac:AllowanceCharge>
				</cac:LineItem>
			</cac:OrderLine>

		</OrderChange>
	</test>

	<test>
		<assert>
			<success>PEPPOL-T114-R022</success>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
				<!--				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>-->
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<!--				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>-->
			</cac:AllowanceCharge>

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
				<!--				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>-->
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<!--				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>-->
			</cac:AllowanceCharge>

		</OrderChange>
	</test>
	<test>
		<assert>
			<success>PEPPOL-T114-R022</success>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:OrderLine>
				<cac:LineItem>

					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
						<!--				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>-->
						<cbc:Amount currencyID="NOK">100</cbc:Amount>
						<!--				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>-->
					</cac:AllowanceCharge>

					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
						<!--				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>-->
						<cbc:Amount currencyID="NOK">100</cbc:Amount>
						<!--				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>-->
					</cac:AllowanceCharge>

				</cac:LineItem>
			</cac:OrderLine>

		</OrderChange>
	</test>


	<test>
		<assert>
			<error number="2">PEPPOL-T114-R022</error>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
				<cbc:MultiplierFactorNumeric>5</cbc:MultiplierFactorNumeric>
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
			</cac:AllowanceCharge>

			<cac:AllowanceCharge>
				<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
				<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
				<cbc:Amount currencyID="NOK">100</cbc:Amount>
				<cbc:BaseAmount currencyID="NOK">500</cbc:BaseAmount>
			</cac:AllowanceCharge>

		</OrderChange>
	</test>
	<test>
		<assert>
			<error number="2">PEPPOL-T114-R022</error>
		</assert>
		<OrderChange xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderChange-2">

			<cac:OrderLine>
				<cac:LineItem>
					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>false</cbc:ChargeIndicator>
						<cbc:MultiplierFactorNumeric>10</cbc:MultiplierFactorNumeric>
						<cbc:Amount currencyID="NOK">150</cbc:Amount>
						<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
					</cac:AllowanceCharge>

					<cac:AllowanceCharge>
						<cbc:ChargeIndicator>true</cbc:ChargeIndicator>
						<cbc:MultiplierFactorNumeric>0.10</cbc:MultiplierFactorNumeric>
						<cbc:Amount currencyID="NOK">100</cbc:Amount>
						<cbc:BaseAmount currencyID="NOK">1000</cbc:BaseAmount>
					</cac:AllowanceCharge>
				</cac:LineItem>
			</cac:OrderLine>

		</OrderChange>
	</test>

</testSet>
